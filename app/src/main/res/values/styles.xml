<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_shrink_fade_out_from_bottom</item>
    </style>

    <style name="EstimateIcon">
        <item name="android:layout_width">@dimen/estimate_icon_size</item>
        <item name="android:layout_height">@dimen/estimate_icon_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EstimateSmallIcon">
        <item name="android:layout_width">@dimen/estimate_small_icon_size</item>
        <item name="android:layout_height">@dimen/estimate_small_icon_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EstimateNumber">
        <item name="android:layout_width">@dimen/estimate_number_circumference</item>
        <item name="android:layout_height">@dimen/estimate_number_circumference</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Settings">
        <item name="android:layout_width">@dimen/settings_icon_size</item>
        <item name="android:layout_height">@dimen/settings_icon_size</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.2</item>
    </style>

</resources>
